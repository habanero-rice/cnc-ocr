////////////////////////////////////////////////////////////////////////////////
// Tuning with fat diagonal affinities
////////////////////////////////////////////////////////////////////////////////


////////////////////////////////////////////////////////////////////////////////
// item collection distributions

[ above : i, j ] : { (i-j)/8 % $RANKS }; // Last row of tile above
[ left  : i, j ] : { (i-j)/8 % $RANKS }; // Last column of tile to the left

////////////////////////////////////////////////////////////////////////////////
// compute group distributions

( initAboveStep : tw, ntw ): { 0 };
( initLeftStep  : th, nth ): { 0 };
( swStep: i, j ): { (i-j)/8 % $RANKS };


////////////////////////////////////////////////////////////////////////////////
// compute group affinities

( $INIT: () ) ->
    ( initAboveStep: #tw, #ntw ),
    ( initLeftStep: #th, #nth ),
    ( swStep: $RANGE(0, #nth), $RANGE(0, #ntw) );
