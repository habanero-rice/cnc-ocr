////////////////////////////////////////////////////////////////////////////////
// Iteration-based tuning
////////////////////////////////////////////////////////////////////////////////


////////////////////////////////////////////////////////////////////////////////
// item collection distributions

[ Lkji: j, i, k ]: { k % $RANKS };
[ results: i ]: { 0 };


////////////////////////////////////////////////////////////////////////////////
// compute group distributions

( groupCTU: k ): { k % $RANKS }; // same as default (didn't really need this)


////////////////////////////////////////////////////////////////////////////////
// compute group affinities

( $INIT: () ) ->
    ( groupCTU: $RANGE(0, #numTiles) );

( groupCTU: k ) ->
    ( serialCholesky: k ),
    ( groupTU: k, $RANGE(k+1, #numTiles) );

( groupTU: k, j ) ->
    ( trisolve:  k, j ),
    ( update: k, j, $RANGE(k+1, j+1) );

