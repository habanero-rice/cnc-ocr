////////////////////////////////////////////////////////////////////////////////
// item collection declarations

[ int* CollA  ];
[ int  CollB  ];
[ int* TotalA ];
[ int  TotalB ];

////////////////////////////////////////////////////////////////////////////////


////////////////////////////////////////////////////////////////////////////////
// tags declarations 

< int [2] SATag > ;  
< int [2] SBTag > ;  

////////////////////////////////////////////////////////////////////////////////
// Step Prescriptions

< SATag > :: ( StepA ) ;	
< SBTag > :: ( StepB ) ;	

////////////////////////////////////////////////////////////////////////////////
// Input output relationships

[ CollA: {i..j} ] -> ( StepA: i, j ) -> [ TotalA: i, j ];
[ CollB: {i..j} ] -> ( StepB: i, j ) -> [ TotalB: i, j ];

// Write graph inputs and start steps
env -> [ CollA: {0..100} ];
env -> [ CollB: {0..100} ];
env -> < SATag: x, y >;
env -> < SBTag: x, y >;

// Return outputs to the caller
[ TotalA: x, y ] -> ( env: x, y );
[ TotalB: x, y ] -> ( env: x, y );
